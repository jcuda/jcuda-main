<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>jcuda-main</artifactId>
    <packaging>pom</packaging>

    <parent>
        <groupId>org.jcuda</groupId>
        <artifactId>jcuda-parent</artifactId>
        <version>0.7.0b-SNAPSHOT</version>
        <relativePath>../jcuda-common/JCudaParentPOM/pom.xml</relativePath>
    </parent>

    <modules>
        <module>../JCuda/JCudaJava</module>
        <module>../JCublas/JCublasJava</module>
        <module>../JCufft/JCufftJava</module>
        <module>../JCurand/JCurandJava</module>
        <module>../JCusparse/JCusparseJava</module>
        <module>../JCusolver/JCusolverJava</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>

                    <!-- Copy the JARs of all modules to the jcuda-main build directory -->
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                            
                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcuda</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                                
                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcublas</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                                
                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcufft</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                                
                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcusparse</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                                
                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcurand</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                                
                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcusolver</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                                
                            </artifactItems>
                        </configuration>
                    </execution>
                    
                    <!-- Copy the native libraries of all modules to the jcuda-main build directory -->
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                            
                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcuda</artifactId>
                                    <version>${project.version}</version>
                                    <type>${jcuda.ext}</type>
                                    <classifier>JCudaRuntime-nativeLibrary</classifier>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>JCudaRuntime-${jcuda.os}-${jcuda.arch}.${jcuda.ext}</destFileName>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            
                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcuda</artifactId>
                                    <version>${project.version}</version>
                                    <type>${jcuda.ext}</type>
                                    <classifier>JCudaDriver-nativeLibrary</classifier>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>JCudaDriver-${jcuda.os}-${jcuda.arch}.${jcuda.ext}</destFileName>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            
                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcublas</artifactId>
                                    <version>${project.version}</version>
                                    <type>${jcuda.ext}</type>
                                    <classifier>JCublas-nativeLibrary</classifier>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>JCublas-${jcuda.os}-${jcuda.arch}.${jcuda.ext}</destFileName>
                                    <overWrite>true</overWrite>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcufft</artifactId>
                                    <version>${project.version}</version>
                                    <type>${jcuda.ext}</type>
                                    <classifier>JCufft-nativeLibrary</classifier>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>JCufft-${jcuda.os}-${jcuda.arch}.${jcuda.ext}</destFileName>
                                    <overWrite>true</overWrite>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcusparse</artifactId>
                                    <version>${project.version}</version>
                                    <type>${jcuda.ext}</type>
                                    <classifier>JCusparse-nativeLibrary</classifier>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>JCusparse-${jcuda.os}-${jcuda.arch}.${jcuda.ext}</destFileName>
                                    <overWrite>true</overWrite>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcurand</artifactId>
                                    <version>${project.version}</version>
                                    <type>${jcuda.ext}</type>
                                    <classifier>JCurand-nativeLibrary</classifier>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>JCurand-${jcuda.os}-${jcuda.arch}.${jcuda.ext}</destFileName>
                                    <overWrite>true</overWrite>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.jcuda</groupId>
                                    <artifactId>jcusolver</artifactId>
                                    <version>${project.version}</version>
                                    <type>${jcuda.ext}</type>
                                    <classifier>JCusolver-nativeLibrary</classifier>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>JCusolver-${jcuda.os}-${jcuda.arch}.${jcuda.ext}</destFileName>
                                    <overWrite>true</overWrite>
                                </artifactItem>

                                
                            </artifactItems>
                        </configuration>
                    </execution>
                    
                </executions>
            </plugin>


        </plugins>
    </build>

</project>